[app]

# (str) Title of your application
title = Telegram Bot Controller

# (str) Package name
package.name = telegrambotcontroller

# (str) Package domain (needed for Android)
package.domain = org.example

# (str) Source code where the main.py is located
source.dir = .

# (str) Application versioning (method 1)
version = 0.1

# (list) Application requirements
requirements = python3,kivy,telethon

# (str) Supported orientation (one of landscape, portrait, sensor or all)
orientation = portrait

# (list) Permissions required by the application
android.permissions = INTERNET

# (str) Presplash of your application
presplash.filename = presplash.png

# (list) include extensions
source.include_exts = py,png,jpg,kv,atlas